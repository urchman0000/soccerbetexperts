<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Team 1</th>
      <th>Team 1 news</th>
      <th>Team 2</th>
      <th>Team 2 news</th>
      <th>Match details</th>
      <th>Featured photo</th>
      <th>Game prediciton</th>
      <th>Reason for bet tip</th>
      <th>Head to head</th>
      <th>Stat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team_1 %></td>
        <td><%= game.team_1_news %></td>
        <td><%= game.team_2 %></td>
        <td><%= game.team_2_news %></td>
        <td><%= game.match_details %></td>
        <td><%= game.featured_photo %></td>
        <td><%= game.game_prediciton %></td>
        <td><%= game.reason_for_bet_tip %></td>
        <td><%= game.head_to_head %></td>
        <td><%= game.stat %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

